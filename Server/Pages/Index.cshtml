@model Server.Pages.IndexModel

@{
    var pageTitle = $"{Resources.PageTitles.Melikabano_Index}";

    ViewData["PageTitle"] = pageTitle;

    int p = 0;

    int c = 0;

    Layout = "Layouts/Ltr/_Layout";

}
