                                        <br />
                                        @if (item.Number > 0)
                                        {
                                            <p class="text-start">@(price.ToString("#,#")) تومان </p>
                                        }
                                        @if (item.Number == 0)
                                        {
                                            <p class="text-start text-danger">@(Resources.DataDictionary.Endofinventory)</p>
                                        }
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
                p = p + 1;
            }
        </div>

