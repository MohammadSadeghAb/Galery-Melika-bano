@page
@model Server.Pages.Manager.Products.CreatePicModel
@{
    var pageTitle =
    $"{Resources.ButtonCaptions.Create} {Resources.DataDictionary.ProductPicture}";

    ViewData[Infrastructure.ViewDataKeyNames.PageTitle] = pageTitle;

    Layout = "Layouts/Manager/_Layout";
}

<form enctype="multipart/form-data" method="post">

    <section-form>
        <fieldset>
            <section-form-header>
                @(pageTitle)
            </section-form-header>

            <partial name="PartialViews/_DisplayPageMessages" />

            <section-form-field>
                <label asp-for="ViewModel.PicAddress1"></label>
                <input asp-for="UplodPic1" />
                <span asp-validation-for="ViewModel.PicAddress1"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.PicAddress2"></label>
                <input asp-for="UplodPic2" />
                <span asp-validation-for="ViewModel.PicAddress2"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.PicAddress3"></label>
                <input asp-for="UplodPic3" />
                <span asp-validation-for="ViewModel.PicAddress3"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.PicAddress4"></label>
                <input asp-for="UplodPic4" />
                <span asp-validation-for="ViewModel.PicAddress4"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.PicAddress5"></label>
                <input asp-for="UplodPic5" />
                <span asp-validation-for="ViewModel.PicAddress5"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.Product_Id"></label>
                <select class="form-select" asp-for="ViewModel.Product_Id"
                        asp-items="@(new SelectList(Model.products,
						nameof(ViewModels.Shared.KeyValueViewModel.Id),
						nameof(ViewModels.Shared.KeyValueViewModel.Name)))">
                </select>
                <span asp-validation-for="ViewModel.Product_Id"></span>
            </section-form-field>
        </fieldset>

        <section-form-buttons>
            <button-create />
            <button-reset />
        </section-form-buttons>

        <section-form-footer>
            <a asp-page="Index">
                @(Html.DtatGetLinkCaptionForList())
            </a>
        </section-form-footer>
    </section-form>

</form>