@page
@model Server.Pages.Admin.Sales.DeleteModel
@{
    var pageTitle =
		$"{Resources.ButtonCaptions.Delete} {Resources.DataDictionary.Card}";

	ViewData[Infrastructure.ViewDataKeyNames.PageTitle] = pageTitle;

	Layout = "Layouts/Admin/Rtl/_Layout";
}

<section-form>
	<fieldset disabled>
		<section-form-header>
			@(pageTitle)
		</section-form-header>

		<partial name="PartialViews/_DisplayPageMessages" />

		<section-form-field>
			<label asp-for="ViewModel.ProductId"></label>
			<input asp-for="Product.Data.Name_Product" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.UserId"></label>
			<input asp-for="User.Data.FullName" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.Price"></label>
			<input asp-for="ViewModel.Price" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.Number"></label>
			<input asp-for="ViewModel.Number" />
		</section-form-field>

		<section-form-field>
			<label asp-for="ViewModel.Price_Total"></label>
			<input asp-for="ViewModel.Price_Total" />
		</section-form-field>
	</fieldset>

	<form method="post">
		<section-form-buttons>
			<input type="hidden" asp-for="ViewModel.Id" />

			<button-delete />
		</section-form-buttons>
	</form>

	<section-form-footer>
		<a asp-page="Index">
			@(Html.DtatGetLinkCaptionForList())
		</a>
		<a asp-page="Details" asp-route-id="@(Model.ViewModel.Id)">
			@(Html.DtatGetLinkCaptionForDetails())
		</a>
		<a asp-page="Update" asp-route-id="@(Model.ViewModel.Id)">
			@(Html.DtatGetLinkCaptionForUpdate())
		</a>
	</section-form-footer>
</section-form>