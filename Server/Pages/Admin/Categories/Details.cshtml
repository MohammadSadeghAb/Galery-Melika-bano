@page
@model Server.Pages.Admin.Categories.DetailsModel
@using Resources

@{
    var pageTitle = $"{ButtonCaptions.Details} {DataDictionary.Category}";

    ViewData[ViewDataKeyNames.PageTitle] = pageTitle;

    Layout = "Layouts/Admin/Rtl/_Layout";

    string picname = $"{Model.ViewModel.Name}.png";
}


<section-form>
    <fieldset disabled>
        <section-form-header>
            @(pageTitle)
        </section-form-header>

        <partial name="PartialViews/_DisplayPageMessages" />

        <label>@(Resources.DataDictionary.Picture)</label>
        <img class="w-100 h-75 rounded-3 mb-2" src="~/CategoryPic/@(picname)" />

        <section-form-field>
            <label asp-for="ViewModel.Name"></label>
            <input asp-for="ViewModel.Name" />
        </section-form-field>

        <section-form-field>
            <label asp-for="ViewModel.ParentName"></label>
            <input asp-for="ViewModel.ParentName" />
        </section-form-field>

        <section-form-field>
            <label asp-for="ViewModel.Ordering"></label>
            <input asp-for="ViewModel.Ordering" />
        </section-form-field>

        <section-form-check>
            <input asp-for="ViewModel.IsActive" />
            <label asp-for="ViewModel.IsActive"></label>
        </section-form-check>

        <section-form-check>
            <input asp-for="ViewModel.IsDeletable" />
            <label asp-for="ViewModel.IsDeletable"></label>
        </section-form-check>
    </fieldset>

    <section-form-footer>
        <a asp-page="Index">
            @(Html.DtatGetLinkCaptionForList())
        </a>
        <a asp-page="Update" asp-route-id="@(Model.ViewModel.Id)">
            @(Html.DtatGetLinkCaptionForUpdate())
        </a>
        <a asp-page="Delete" asp-route-id="@(Model.ViewModel.Id)">
            @(Html.DtatGetLinkCaptionForDelete())
        </a>
    </section-form-footer>
</section-form>