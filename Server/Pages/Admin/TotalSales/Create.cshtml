@page
@model Server.Pages.Admin.TotalSales.CreateModel
@{
    var pageTitle =
    $"{Resources.ButtonCaptions.Create} {Resources.DataDictionary.Sale}";

    ViewData[Infrastructure.ViewDataKeyNames.PageTitle] = pageTitle;

    Layout = "Layouts/Admin/Rtl/_Layout";
}

<form method="post">

    <section-form>
        <fieldset>
            <section-form-header>
                @(pageTitle)
            </section-form-header>

            <partial name="PartialViews/_DisplayPageMessages" />

            <section-form-field>
                <label asp-for="ViewModel.Products"></label>
                <select class="form-select" asp-for="ViewModel.Products"
                        asp-items="@(new SelectList(Model.products,
						nameof(ViewModels.Shared.KeyValueViewModel.Id),
						nameof(ViewModels.Shared.KeyValueViewModel.Name)))">
                </select>
                <span asp-validation-for="ViewModel.Products"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.UserId"></label>
                <select class="form-select" asp-for="ViewModel.UserId"
                        asp-items="@(new SelectList(Model.users,
						nameof(ViewModels.Shared.KeyValueViewModel.Id),
						nameof(ViewModels.Shared.KeyValueViewModel.Name)))">
                </select>
                <span asp-validation-for="ViewModel.UserId"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.FactorNumber"></label>
                <input asp-for="ViewModel.FactorNumber" />
                <span asp-validation-for="ViewModel.FactorNumber"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.Number"></label>
                <input asp-for="ViewModel.Number" />
                <span asp-validation-for="ViewModel.Number"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.TotalPrice"></label>
                <input asp-for="ViewModel.TotalPrice" />
                <span asp-validation-for="ViewModel.TotalPrice"></span>
            </section-form-field>

            <section-form-field>
                <label asp-for="ViewModel.Color"></label>
                <input asp-for="ViewModel.Color" />
                <span asp-validation-for="ViewModel.Color"></span>
            </section-form-field>
        </fieldset>

        <section-form-buttons>
            <button-create />
            <button-reset />
        </section-form-buttons>

        <section-form-footer>
            <a asp-page="Index">
                @(Html.DtatGetLinkCaptionForList())
            </a>
        </section-form-footer>
    </section-form>

</form>