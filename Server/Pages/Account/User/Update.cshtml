@page
@model Server.Pages.Account.User.UpdateModel
@{
    var pagetitle = $"{Resources.ButtonCaptions.Update} {Resources.DataDictionary.Information} {User.Claims.FirstOrDefault(x => x.Type == "FullName").Value}";

    ViewData["pagetitle"] = pagetitle;

    if (System.Threading.Thread.CurrentThread.CurrentUICulture.TextInfo.IsRightToLeft)
    {
        Layout =
            "Layouts/Rtl/_Security";
    }
    else
    {
        Layout =
            "Layouts/Ltr/_Security";
    }
}

<form method="post">

    <div class="container my-0 my-sm-1 my-md-3 my-lg-5">
        <div class="row">
            <div class="col-12 p-3 col-md-8 offset-md-2 p-md-4   col-lg-6 offset-lg-3 p-lg-5   bg-light border border-2 rounded-3 shadow-lg">
                <fieldset>
                    <legend>
                        @(pagetitle)
                    </legend>

                    <hr />

                    <input hidden asp-for="ViewModel.Id" />

                    <partial name="PartialViews/_DisplayPageMessages" />

                    <div class="mb-3">
                        <label asp-for="ViewModel.FullName" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="ViewModel.FullName" class="form-control" dir="rtl" />
                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                        </div>

                        <span asp-validation-for="ViewModel.FullName" class="text-danger"></span>
                    </div>

                    @*<div class="mb-3">
                        <label asp-for="ViewModel.FatherName" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="ViewModel.FatherName" class="form-control" dir="rtl" />
                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                        </div>

                        <span asp-validation-for="ViewModel.FatherName" class="text-danger"></span>
                    </div>*@

                    <div class="mb-3">
                        <label asp-for="ViewModel.Username" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="ViewModel.Username" class="form-control" dir="ltr" />
                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                        </div>

                        <span asp-validation-for="ViewModel.Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ViewModel.CellPhoneNumber" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="ViewModel.CellPhoneNumber" class="form-control" dir="ltr" />
                            <div class="input-group-text"><i class="bi bi-telephone-fill"></i></div>
                        </div>

                        <span asp-validation-for="ViewModel.CellPhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ViewModel.EmailAddress" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="ViewModel.EmailAddress" class="form-control" dir="ltr" />
                            <div class="input-group-text"><i class="bi bi-envelope-fill"></i></div>
                        </div>

                        <span asp-validation-for="ViewModel.EmailAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ViewModel.Gender" class="form-label"></label>

                        <div class="input-group">
                            <select asp-for="ViewModel.Gender" class="form-control" dir="ltr">
                                <option>@(Resources.DataDictionary.Male)</option>
                                <option>@(Resources.DataDictionary.Female)</option>
                            </select>
                            <div class="input-group-text"><i class="bi bi-gender-male"></i></div>
                        </div>

                        <span asp-validation-for="ViewModel.Gender" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ViewModel.ProvinceAddress" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="ViewModel.ProvinceAddress" class="form-control" dir="rtl" />
                            <div class="input-group-text"><i class="bi bi-geo-alt-fill"></i></div>
                        </div>

                        <span asp-validation-for="ViewModel.ProvinceAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ViewModel.CityAddress" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="ViewModel.CityAddress" class="form-control" dir="rtl" />
                            <div class="input-group-text"><i class="bi bi-geo-alt-fill"></i></div>
                        </div>

                        <span asp-validation-for="ViewModel.CityAddress" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ViewModel.Address" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="ViewModel.Address" class="form-control" dir="rtl" />
                            <div class="input-group-text"><i class="bi bi-geo-alt-fill"></i></div>
                        </div>

                        <span asp-validation-for="ViewModel.Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ViewModel.NationalCode" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="ViewModel.NationalCode" class="form-control" dir="ltr" />
                            <div class="input-group-text"><i class="bi bi-flag-fill"></i></div>
                        </div>

                        <span asp-validation-for="ViewModel.NationalCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ViewModel.PostalCode" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="ViewModel.PostalCode" class="form-control" dir="ltr" />
                            <div class="input-group-text"><i class="bi bi-mailbox2"></i></div>
                        </div>

                        <span asp-validation-for="ViewModel.PostalCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">@(Resources.ButtonCaptions.Update)</button>
                        <button type="reset" class="btn btn-secondary">@(Resources.ButtonCaptions.Reset)</button>
                    </div>
                </fieldset>

            </div>
        </div>
    </div>

</form>
