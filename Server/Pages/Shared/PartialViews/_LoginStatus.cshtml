<ul class="navbar-nav mb-2 mb-lg-0">

	@if (User == null ||
			User.Identity == null ||
			User.Identity.IsAuthenticated == false)
	{
		<li class="nav-item">
			<a class="nav-link" asp-page="/Account/Register">
				@(Resources.PageTitles.Register)
			</a>
		</li>

		<li class="nav-item">
			<a class="nav-link" asp-page="/Account/Login">
				@(Resources.PageTitles.Login)
			</a>
		</li>
	}
	else
	{
		if (User.Claims.FirstOrDefault(x => x.Type == "http://schemas.microsoft.com/ws/2008/06/identity/claims/role").Value == "Admin")
		{
			<li>
				<a class="nav-link text-warning" asp-page="/Admin/Index">
					@(Resources.DataDictionary.Dashboard)
				</a>
			</li>


			<li class="nav-item">
				<a class="nav-link" asp-page="/Account/Logout">
					@(Resources.PageTitles.Logout)
				</a>
			</li>
		}

		if (User.Claims.FirstOrDefault(x => x.Type == "http://schemas.microsoft.com/ws/2008/06/identity/claims/role").Value == "User")
		{
			<li>
				<a class="nav-link text-warning" asp-page="/User/Index">
					@(Resources.DataDictionary.Dashboard)
				</a>
			</li>


			<li class="nav-item">
				<a class="nav-link" asp-page="/Account/Logout">
					@(Resources.PageTitles.Logout)
				</a>
			</li>
		}
	}
</ul>
