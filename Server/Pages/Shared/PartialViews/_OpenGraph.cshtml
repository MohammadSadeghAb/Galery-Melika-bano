@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor

@{
	var siteUrl = $"https://{httpContextAccessor.HttpContext?.Request.Host.Value}";
	var imageUrl = $"{siteUrl}/images/Dariush.png";
}

<meta property="og:type" content="website" />
<meta property="og:url" content="@(siteUrl)" />

<meta property="og:image" content="@(imageUrl)" />
<meta property="og:image:width" content="800" />
<meta property="og:image:height" content="800" />
<meta property="og:image:alt" content="" />

<meta property="og:site_name" content="" />
<meta property="og:title" content="" />
<meta property="og:description" content="This site has been developed by .NET 6, C# language and ASP.NET Core Razor Pages Technology!" />
