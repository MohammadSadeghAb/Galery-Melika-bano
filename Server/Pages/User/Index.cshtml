@page
@model Server.Pages.User.IndexModel
@{
    var pageTitle = $"{Resources.PageTitles.Profile} - {User.Claims.FirstOrDefault(x => x.Type == "FullName").Value}";

    ViewData["PageTitle"] = pageTitle;

    Layout = "Layouts/Ltr/_Layout";
}

<br />
<br />
<br />
<br />
<br />

<div class="container">
    <div class="row">
        <div class="col-4 p-3">
            <div class="border p-3">
                    <div class="dropdown">
                    <a href="#" class=" bg-danger rounded-2 p-2 d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                           id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="mx-1"><i class="bi bi-circle-person"></i> @(User.Claims.FirstOrDefault(x => x.Type == "FullName").Value)</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                            <li>
                                <a class="dropdown-item" asp-page="/Account/User/Update">
                                    @(Resources.PageTitles.UpdateProfile)
                                </a>
                            </li>

                            <li><hr class="dropdown-divider"></li>

                            <li>
                                <a class="dropdown-item" asp-page="/Account/Logout">
                                    @(Resources.PageTitles.Logout)
                                </a>
                            </li>
                        </ul>
                    </div>
                <hr />
                <a asp-page="Card/Index" asp-route-id="@(User.Claims.FirstOrDefault(x => x.Type == "Id").Value)" class="w-100 border text-dark btn btn-outline-light"><i class="bi bi-cart"></i><span class="ms-2 d-none d-sm-inline">@(Resources.DataDictionary.Card)</span></a>
            </div>
        </div>

        <div class="col-8 p-3">
            <div class="row border p-3">
                <div class="text-center col-12">
                    <h2>@(User.Claims.FirstOrDefault(x => x.Type == "FullName").Value) @(Resources.DataDictionary.Welcome)</h2>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="border rounded-2 m-1 p-3">
                        <h5><i class="bi bi-cart"></i> @(Resources.DataDictionary.Number) @(Resources.DataDictionary.Product) @(Resources.DataDictionary.Card) : @(Model.CountCard)</h5>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="border rounded-2 m-1 p-3">
                        <h5><i class="bi bi-cart"></i> @(Resources.DataDictionary.Number) @(Resources.DataDictionary.Buy) : @(Model.CountTotal)</h5>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <div class="border rounded-2 m-1 p-3">
                        <h5><i class="bi bi-cart"></i> @(Resources.DataDictionary.Number) @(Resources.DataDictionary.Product) @(Resources.DataDictionary.Delivery) : @(Model.CountDelivery)
                        </h5>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>