@page
@model Server.Pages.ProductsModel
@{
    var pageTitle =
        Resources.PageTitles.Melikabano_Products;

    ViewData["PageTitle"] = pageTitle;

    Layout = "Layouts/Ltr/_Layout";
}

<br />
<br />
